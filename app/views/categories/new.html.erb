<h1 class ="text-center mt-4">Create Category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class:"shadow p-3 mb-3 bg-success rounded", local: true) do |f| %>
        <div class="form-group mb-3 row">
          <%= f.label :name, "Category Name", class:"col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class:"form-control shadow rounded", placeholder:"Enter a category name" %>
          </div>
        </div>
        <div class="form-group d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mb-3">
      <%= link_to '[ Cancel and return to article listing ]', articles_path, class: "text-success" %>
    </div>
  </div>
</div>